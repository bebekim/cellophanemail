#!/usr/bin/env bash
# Clean up Docker environment completely

set -e

GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
RED='\033[0;31m'
NC='\033[0m'

echo -e "${YELLOW}ðŸ§¹ Cleaning Docker Environment${NC}"

# Stop and remove containers
echo -e "${BLUE}Stopping containers...${NC}"
docker-compose down

# Option to remove volumes
read -p "Remove database volumes? (y/N): " -n 1 -r
echo
if [[ $REPLY =~ ^[Yy]$ ]]; then
    echo -e "${RED}Removing volumes (database data will be lost)...${NC}"
    docker-compose down -v
    echo -e "${GREEN}âœ… Volumes removed${NC}"
fi

# Remove dangling images
echo -e "${BLUE}Cleaning up dangling images...${NC}"
docker image prune -f

echo -e "${GREEN}âœ… Cleanup complete${NC}"
