#!/usr/bin/env bash

# Kill script for CellophoneMail services
# Based on protectedtex/bin/kill

set -e

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

echo -e "${YELLOW}ðŸ›‘ Killing CellophoneMail services...${NC}"

# Kill SMTP server processes
echo -e "${YELLOW}Stopping SMTP server...${NC}"
pkill -f "cellophanemail.*smtp" 2>/dev/null || true
pkill -f "aiosmtpd" 2>/dev/null || true

# Kill Litestar/uvicorn processes
echo -e "${YELLOW}Stopping Litestar API server...${NC}"
pkill -f "uvicorn.*cellophanemail" 2>/dev/null || true
pkill -f "litestar.*cellophanemail" 2>/dev/null || true

# Kill any Python processes running our modules
pkill -f "python.*cellophanemail" 2>/dev/null || true

# Kill by port if processes are still running
echo -e "${YELLOW}Checking for processes on ports 8000 and 2525...${NC}"

# Kill process on port 8000 (Litestar)
if lsof -Pi :8000 -sTCP:LISTEN -t >/dev/null 2>&1; then
    echo -e "${YELLOW}Killing process on port 8000...${NC}"
    lsof -Pi :8000 -sTCP:LISTEN -t | xargs kill -9 2>/dev/null || true
fi

# Kill process on port 2525 (SMTP)
if lsof -Pi :2525 -sTCP:LISTEN -t >/dev/null 2>&1; then
    echo -e "${YELLOW}Killing process on port 2525...${NC}"
    lsof -Pi :2525 -sTCP:LISTEN -t | xargs kill -9 2>/dev/null || true
fi

# Also kill any Python processes that might be related to email processing
echo -e "${YELLOW}Checking for email processing Python processes...${NC}"
pkill -f "run.py" 2>/dev/null || true
pkill -f "smtp.*server" 2>/dev/null || true
pkill -f "aiosmtpd" 2>/dev/null || true

# Wait a moment
sleep 1

# Check if anything is still running
REMAINING_PROCESSES=$(pgrep -f "cellophanemail" 2>/dev/null || true)
if [ -n "$REMAINING_PROCESSES" ]; then
    echo -e "${RED}Warning: Some processes may still be running:${NC}"
    ps aux | grep cellophanemail | grep -v grep || true
else
    echo -e "${GREEN}âœ… All CellophoneMail services stopped${NC}"
fi