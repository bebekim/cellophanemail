# Test environment configuration - prevents quota usage

# Enable dry-run mode for Postmark to avoid burning through quota
POSTMARK_DRY_RUN=true
CELLOPHANEMAIL_TEST_MODE=true

# Optional: Log dry-run emails to file for debugging
POSTMARK_LOG_DRY_RUN=true

# Use local SMTP for testing instead of Postmark
EMAIL_DELIVERY_METHOD=smtp
SMTP_HOST=localhost
SMTP_PORT=1025

# Or use Gmail if you have it configured
# EMAIL_DELIVERY_METHOD=gmail

# Database for testing
DATABASE_URL=postgresql://postgres:password@localhost:5432/cellophanemail_test

# Anthropic key for AI analysis (use cautiously in tests)
# ANTHROPIC_API_KEY=your_key_here

# License key for testing commercial features
# CELLOPHANEMAIL_LICENSE_KEY=COM-TEST-KEY