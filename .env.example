# CellophoneMail Environment Configuration Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control

# ============================================
# Application Settings
# ============================================
DEBUG=true
TESTING=false
HOST=0.0.0.0
PORT=8000

# REQUIRED: Generate a secure secret key (minimum 32 characters)
# Python: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-here-minimum-32-chars

# REQUIRED: Generate with Fernet for data encryption
# Python: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=generate-with-fernet-generate-key

# ============================================
# Database Configuration
# ============================================
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://user:password@localhost:5432/cellophanemail
REDIS_URL=redis://localhost:6379/0

# ============================================
# AI Services
# ============================================
# Anthropic Claude API (https://console.anthropic.com/)
ANTHROPIC_API_KEY=sk-ant-api03-your-key-here

# Upstage API (Optional)
UPSTAGE_API_KEY=up_your-key-here

# AI Provider: anthropic or upstage
AI_PROVIDER=anthropic
AI_MODEL=claude-3-5-sonnet-20241022

# ============================================
# Email Delivery Configuration
# ============================================
# Delivery method: smtp or postmark
EMAIL_DELIVERY_METHOD=smtp

# Postmark Configuration (if using postmark)
# Get from: https://account.postmarkapp.com/servers
POSTMARK_API_TOKEN=your-postmark-token
POSTMARK_ACCOUNT_API_TOKEN=your-account-token
POSTMARK_SERVER_ID=your-server-id
POSTMARK_FROM_ADDRESS=noreply@yourdomain.com
POSTMARK_DRY_RUN=false

# SMTP Configuration (if using smtp)
EMAIL_USERNAME=your-email@example.com
# For Gmail: Create app password at https://myaccount.google.com/apppasswords
EMAIL_PASSWORD=your-app-password
SMTP_DOMAIN=cellophanemail.com
OUTBOUND_SMTP_HOST=smtp.gmail.com
OUTBOUND_SMTP_PORT=587

# ============================================
# Security Settings
# ============================================
# CORS allowed origins (comma-separated)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# ============================================
# Billing Configuration (Optional)
# ============================================
# Stripe API Keys (https://dashboard.stripe.com/apikeys)
STRIPE_API_KEY=sk_test_your-key
STRIPE_WEBHOOK_SECRET=whsec_your-secret

# ============================================
# Feature Flags
# ============================================
ENABLED_PLUGINS=smtp
PRIVACY_SAFE_LOGGING=true
LLM_ANALYZER_MODE=privacy